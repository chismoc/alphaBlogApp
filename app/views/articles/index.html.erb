<h1>Articles Listing Page</h1>


<table class="table">
  <thead class="table-dark">
   <tr>
     <th width="20%">Title</th>
     <th width="50%">Description</th>
     <th colspan="3">Actions</th>
    
   </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
  <tr>
    <td width="20%"><%= article.title %></td>
    <td width="50%"><%= article.description %></td>
    <td><%= link_to 'show', article_path(article) %></td>
    <td><%= link_to 'edit', edit_article_path(article) %></td>
    <td><%= button_to 'Delete', article_path(article), method: :delete, onclick: "return confirm('Are you sure You want to delete?')" %></td>
      
  </tr>
  <% end %>
  
  </tbody>
</table>

<p><%= link_to 'Create new article' , new_article_path %></p>