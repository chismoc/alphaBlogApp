<div class = "container">

<div class="row justify-content-center">

<div class = "col-10">
<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f| %>
<div class = "form-group row">

    <%= f.label :title , class: "col-3 col-form-label text-white" %><br/>
    <div class="col-9">
   
    <%= f.text_field :title, class: "form-control shadow-rounded", placeholder: "Title of article" %>
    </div>
</div>
    
<div class="form-group row mt-2 "> 
    <%= f.label :description , class: "col-3 col-form-label text-white" %><br/>
    <div class="col-9">
   
    <%= f.text_area :description,rows:  10,  class: "form-control shadow-rounded", placeholder: "Description of article" %>
    </div>
    </div>
    
    <div class="input-group justify-content-center mb-3 mt-4"> 
    <%= f.submit  class: "btn btn-outline-warning btn-lg text-white " %>
    </div>
<div class = "d-flex justify-content-center mb-3">
    <%= link_to '[Cancel and Return to articles listing]', articles_path, class: "text-warning" %>
    
    <% end %>

   </div>
   
    </div>
</div>