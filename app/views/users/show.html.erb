<h1 class = "text-center mt-4 text-white"><span><%= @user.username %>'s </span> profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
<%=  link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-warning" %>
</div>

<h3 class = "text-center mt-4 text-white">Articles</h3>

<%= render 'articles/article' %>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
