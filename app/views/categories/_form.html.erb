<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f| %>
    <div class="form-group row mt-2 "> 
    <%= f.label :name, "Category name", class: "col-3 col-form-label text-white" %><br/>
    <div class="col-9">
    <%= f.text_field :name, class: "form-control shadow-rounded", placeholder: "Enter a username" %>
     
    </div>
    </div>
    
    <div class="input-group justify-content-center mb-3 mt-4"> 
    <%= f.submit  class: "btn btn-outline-warning btn-lg text-white " %>
    </div>
    
    <% end %>